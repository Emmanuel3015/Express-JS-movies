doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="/output.css")
        title=data.title
    body(class="bg-[#000217]")
        div(class="grid grid-cols-2 gap-8 max-w-4xl mx-auto mt-28")
            div
                img(src=`https://image.tmdb.org/t/p/w300${data.poster_path}`, alt="" class="w-full h-full object-cover rounded-lg")
            div
                h1(class="font-bold text-5xl text-[#fff]")= data.title 
                p(class="text-orange-700 mt-4 font-semibold")=data.vote_average
                p(class="mt-4 text-[#fff]")= data.overview